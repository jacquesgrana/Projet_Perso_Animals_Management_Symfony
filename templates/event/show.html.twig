{% extends 'base.html.twig' %}

{% block title %}Gestion de mes animaux / Voir un évènement{% endblock %}

{% block body %}

    <h2 class="home-title-top">Voir un évènement</h2>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ event.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ event.name }}</td>
            </tr>
            <tr>
                <th>Commentaire</th>
                <td>{{ event.comment }}</td>
            </tr>
            <tr>
                <th>Utilisateur</th>
                <td>{{ event.user.pseudo }}</td>
            </tr>
            <tr>
                <th>Catégorie</th>
                <td>{{ event.category.name }}</td>
            </tr>
            <tr>
                <th>Statut</th>
                <td>{{ event.status.name }}</td>
            </tr>
            <tr>
                <th>Priorité</th>
                <td>{{ event.priority.name }}</td>
            </tr>
            <tr>
                <th>Début</th>
                <td>{{ event.start ? event.start|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Durée</th>
                <td>{{ event.duration }}</td>
            </tr>
            <tr>
                <th>Animaux</th>
                <td>
                <select class="select">
                
                {% for animal in event.animals %}
                <option class="option">{{ animal.name }}</option>
                {% else %}
                <option class="option">Pas d'animal.</option>
                {% endfor %}
                </select>
                </td>
            </tr>
        </tbody>
    </table>

    <a class="btn-form" href="{{ path('app_event_edit', {'id': event.id}) }}">Editer</a>
    {{ include('event/_delete_form.html.twig') }}
    <a class="btn-form" href="{{ path('app_event_list') }}">Retour à la liste</a>
{% endblock %}
