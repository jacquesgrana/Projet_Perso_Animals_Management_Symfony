{% extends 'base.html.twig' %}

{% block title %}Gestion de mes Animaux • Mails{% endblock %}

{% block body %}
<div class="wrapper">
    <h2 class="home-title-top text-white">Gérer mes mails</h2>

    <form class="input-container-mail">
        <div class="btn-div-mail">
            <p class="text-p-mail">Réglages</p>
            <div class="input-div-mail">
                <label class="label-mail" for="input-email-mail">Destination</label>
                <input class="input-mail" type="email" id="input-email-mail" name="input-email-mail" value="{{ userEmail }}"/>
            </div>
            <div class="input-div-mail">
                <label class="label-mail" for="input-day-mail">Jour</label>
                <input class="input-mail link-event-list" type="date" id="input-date-mail" name="input-date-mail" value="{{ currentDate }}"/>
            </div>
        </div>
        <div class="btn-div-mail">
            <p class="text-p-mail">Evénements du jour</p>
            <div id="btn-div-mail">
                <button class="btn-form" id="btn-send-day-mail">Envoyer email</button>
                <button type="button" id="btn-view-events-day" class="btn-form-small">👁</button>
            </div>
        </div>
        <div class="btn-div-mail">
            <p class="text-p-mail">Evénements de la semaine</p>
            <div id="btn-div-mail">
                <button class="btn-form" id="btn-send-week-mail">Envoyer email</button>
                <button type="button" id="btn-view-events-week" class="btn-form-small">👁</button>
            </div>
        </div>
        <div class="btn-div-mail">
            <p class="text-p-mail">Evénements du mois</p>
            <div id="btn-div-mail">
                <button class="btn-form" id="btn-send-month-mail">Envoyer email</button>
                <button type="button" id="btn-view-events-month" class="btn-form-small">👁</button>
            </div>
        </div>
    </form>

    <a class="btn-form" href="{{ path('app_home') }}">Retour à l'accueil</a>
</div>
{% endblock %}
{% block additional_javascripts %}
<script>
var userEmail = "{{ userEmail }}";
var userPseudo = "{{ userPseudo }}";
var mailManager = new MailManager(userEmail, userPseudo);
mailManager.run();
</script>
{% endblock %}
